# Server
NODE_ENV=development
PORT=5006
LOG_LEVEL=info

# Authentication
API_KEYS=dev-key-1,dev-key-2
ADMIN_API_KEY=

# Solana RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_URL_FALLBACK=
RPC_PROVIDER=generic
RPC_PROVIDER_API_KEY=

# Redis (optional â€” falls back to in-memory LRU)
REDIS_URL=

# Jito Block Engine (leave empty for mock mode)
# Mainnet: https://mainnet.block-engine.jito.wtf/api/v1/bundles
JITO_BLOCK_ENGINE_URL=

# Stripe (billing webhooks)
STRIPE_WEBHOOK_SECRET=whsec_sipher_dev_secret

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Proxy
TRUST_PROXY=1

# Graceful Shutdown
SHUTDOWN_TIMEOUT_MS=30000
